<% provide(:title, "Dashboard") %>

<table class="table table-striped">
  <thead class="thead-light">
    <tr>
      <th>No. ID</th>
        <th scope="col">Account ID</th>
        <th scope="col">Currency</th>
        <th scope="col">Account Type</th>
        <th scope="col">Balance</th>
    </tr>
    </thead>
    <tbody>
    <% @bankAccounts.each do |acc|%>
    <tr>
        <th scope="row"><%= link_to  @bankAccounts.find_index(acc)+1, bank_account_path(acc)%></th>
        <td><%= acc.id%></td>
        <td><%= acc.currency%></td>
        <td><%= acc.type_of_account%></td>
        <td><%= acc.amount%></td>
    </tr>
    <% end%>
  </tbody>
</table>

<table class="table table-striped">
 <thead class="thead-light">
  <tr>
    <th scope="col">Date</th>
    <th scope="col">Remitter</th>
    <th scope="col">Recipient</th>
    <th scope="col">Amount</th>
    <th scope="col">Currency</th>
    <th scope="col">Transaction Reference</th>
  </tr>
  </thead>
    <tbody>
  <% @transactions.each do |transaction| %>
  <tr>
    <th scope="row"><%= transaction.created_at%></th>
    <td ><%= transaction.remitter%></td>
    <td ><%= transaction.recipient%></td>
    <td ><%= transaction.currency%></td>
    <td ><%= transaction.amount%></td>
    <td ><%= transaction.reference%></td>
    <td ><%= link_to "View", transaction_path(transaction.id), class: "btn btn-primary"%>
  </tr>
  <%end%>
  </tbody>
</table>