<!DOCTYPE html>
<html>
   <head>
         <%= favicon_link_tag "favicon.ico" %>
    <title>


    <%= full_title(yield(:title)) %>
    </title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag "application", media: "all", 'data-turbolinks-track': "reload" %>
    <%= javascript_pack_tag "application", 'data-turbolinks-track': "reload" %>
    <script src="/assets/jquery.js" type="text/javascript"></script>
    <script src="/assets/jquery_ujs.js" type="text/javascript"></script>
    <script src="/js/bootstrap.min.js" type="text/javascript"></script>

    <!-- Checks if there are any style changes, if so apply those -->
    <% if cookies[:style] %>
    <%= stylesheet_link_tag cookies[:style] %>
    <% end %>
  </head>

  <body>

    <!-- Navigation bar for the top -->
    <nav class="navbar fixed-top navbar-expand-lg navbar-light bg-light">
    <!-- If logged in redirect to profile when clicked if not redirect to welcome page -->
      <a class="navbar-brand float-left">
        <img src="<%= image_path("logo.PNG") %>" class="logo"  href="/">
      </a>
      <div class="collapse navbar-collapse  float-right " id="navbarNavAltMarkup">
      <div class="navbar-nav ml-auto  ">
      <!-- Temporary, for development, improve later-->
      <% @t = Time.now.hour %>
      <% @greeting = "" %>
      <% if @t >= 0 && @t < 6 %>
        <% @greeting = "Time to sleep, " %>
      <% elsif @t >= 6 && @t < 12 %>
        <% @greeting = "Good morning, " %>
      <% elsif @t >= 12 && @t < 18 %>
        <% @greeting = "Good afternoon, " %>
      <% else %>
        <% @greeting = "Good evening, " %>
      <% end %>
      <h3 class="mr-40"><%= @greeting + (Administrator.find(session[:administrator_id])).administratorname.upcase %></h3>

        <% if logged_in_as_administrator? %>
            <%= link_to "Back to website", "/admin/logout", method: :delete, class: "btn btn-primary " %>
            <%= link_to "LOG OUT", "/admin/logout", method: :delete, class: "btn btn-primary" %>
        <% end %>
        </div>
    </nav>

    <div style="height: 96px;"></div>
    <!-- Notification and alert area -->
    <% flash.each do |type, msg| %>
      <% if type == "alert" %>
        <div class="row alert alert-danger alert-dismissible show" role="alert" style="margin-bottom: 0">
          <% msg.split(";").each do |m| %>
            <%= m %><br/>
          <% end %>
          <a href="#" data-dismiss="alert" class="close">×</a>
        </div>
      <% elsif type == "notice" %>
        <div class="row alert alert-success alert-dismissible show" role="alert" style="margin-bottom: 0">
          <strong><%= msg %></strong>
          <a href="#" data-dismiss="alert" class="close">×</a>
        </div>
      <% end %>
    <% end %>
<!-- Main content-->
    <div class="container-fluid ">
      <div class="row">
        <!-- Sidebar -->
          <div class="col-sm-2 sidebar bg-info">
            <%= render "shared/admin_sidebar" %>
          </div>
          <div class="col-sm-10 ">
            <%= yield %>
          </div>
      </div>

    </div>
<!-- END main content-->

<div class="col-sm-12 mt-20">
  <!-- footer -->
  <%= render "shared/footer" %>
</div>

  </body>
</html>
