<!DOCTYPE html>
<html>
  <head>
    <title><%= full_title(yield(:title)) %></title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

 
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>

    <!-- Latest compiled and minified CSS -->
  
    <!-- jQuery library -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

    <!-- Popper JS -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>

    <!-- Latest compiled JavaScript -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

    <!-- Font awesome -->
    <!--<script src='https://kit.fontawesome.com/a076d05399.js'></script>-->

    <%= stylesheet_link_tag 'sessions' %>
  </head>

  <body>
  <!-- Navigation bar for the top -->
  <div class="navigationbar">
  <header>
  <img class="logo" src="/assets/logo.PNG" width="auto" height="80px" >
    <nav >
      <div >
        <ul class="nav__links">
          <% if logged_in? %>
          <li class="links">
          <!-- When bank account page is created change link directory -->
            <%= link_to "My bank account", "" %>
          </li>
          <% end %>
          <li class="links">
            <%= link_to "Home page", "/pages/landing" %>
          </li class="links">
          <li >
            <%= link_to "Invest", "/pages/fees" %>
          </li class="links">
          <li >
            <%= link_to "Fees", "/pages/fees" %>
          </li>
          <li class="loginlink">
            <% if logged_in? %>
              <%= link_to "Log out", logout_path, method: :delete%>
            <% else %>
              <%= link_to "Log in", login_path%>
            <% end %>
          </li>
        </ul>
      </div>
    </nav>
    </div>
    </header>
    <div class="container">

      <div class="row">
        <div class="col-sm-12">
          <%= yield %>
        </div>
      </div>
    </div>
  </div>
  </div>
  </body>
  <footer class="row fixed-bottom">
    <!-- Helpful for debugging -->
    <div class="container text-center">
      <div class="row">
        <%= debug(params) if Rails.env.development? %>
      </div>
    </div>
  </footer>
</html>
