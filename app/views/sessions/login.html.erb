<div class="row justify-content-center text-center">
  <div class="col-sm-4">
    <div class="loginform2">
      <div class="login">
        <% provide(:title, "Login") %>
          <img class="login-logo" src="/assets/logo.PNG" >
          <h1>Log in to your account</h1>
          <%= form_tag '/login' do %> 
            <div class="form-group">
              <%= label_tag :Username%>
              <%= text_field_tag :username , {class: "form-control", placeholder: "Enter username"}%>
            </div>
            <div class="form-group">
              <%= label_tag :Password%>
              <%= password_field_tag :password, {class: "form-control", placeholder: "Enter password"}%>
            </div>
            <div class="form-group">
            <label><input type="checkbox" class="m-1">Remember me</label>
            </div>
            <%= submit_tag "Login"%>
            <br/>
            <%= link_to "Forgotten password?" %>
        <%end%>
      </div>
    </div>
  </div>
</div>
