<div class="row justify-content-center text-center">
  <div class="col-sm-4">
    <div class="adminloginform2">
      <div class="login">
         <% provide(:title, "Administrator Login") %>
            <img class="login-logo" src="/assets/logo.PNG" >
            <h1>Administrator Login</h1>
            
            <%= form_tag '/admin/new' do %>
            <div class="form-group">
              <%= label_tag :administratorname%>
              <%= text_field_tag :administratorname , {class: "form-control", placeholder: "Enter administrator name"}%>
            </div>
            <div class="form-group">
              <%= label_tag :password%>
              <%= password_field_tag :password, {class: "form-control", placeholder: "Enter password"}%>
            </div>
            <%= submit_tag "Login", class: "btn btn-outline-success"%>
         <%end%>
      </div>
    </div>
  </div>
</div>