<div class="row justify-content-center text-center adminsessionbackground" >
  <div class="col-sm-4">
    <div class="loginform2 mt-40 mb-40" >
      <div class="login">
         <% provide(:title, "Administrator Login") %>
            <img src="<%= image_path("logo.PNG") %>" class="login-logo"  >
            <h1>Administrator Login</h1>

            <%= form_tag "/admin/new" do %>
            <div class="form-group mt-40">
              <%= label_tag :administratorname %>
              <br/>
              <%= text_field_tag :administratorname %>
            </div>
            <div class="form-group mt-40">
              <%= label_tag :password %>
              <br/>
              <%= password_field_tag :password %>
            </div>
            <%= submit_tag "Login", class: "button mt-40" %>
         <% end %>
      </div>
    </div>
  </div>
</div>
