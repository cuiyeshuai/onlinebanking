<div class="row justify-content-center text-center adminsessionbackground" >
  <div class="col-sm-4">
    <div class="loginform2 mt-40 mb-40" >
      <div class="login">
         <% provide(:title, "Administrator Login") %>
            <img src="<%= image_path("logo.PNG") %>" class="login-logo"  >
            <h1>Second Secure Password required</h1>

            <%= form_tag "/admin/verification" do %>
            <div class="form-group mt-40">
              <%= label_tag :second_password%>
              <%= password_field_tag :second_password%>
            </div>
            <%= submit_tag "Verify", class: "button mt-40" %>
         <% end %>
      </div>
    </div>
  </div>
</div>
