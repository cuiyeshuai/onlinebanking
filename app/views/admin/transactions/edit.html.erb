<%= link_to("Back to list", admin_transactions_path, :class => 'back-link') %>

<h1>Edit Transactions</h1>

<%= form_for(@transaction, :url => admin_transaction_path) do |f| %>
<table>
  <tr>
    <th>Currency</th>
    <td>
      <%= @transaction.currency %>
    </td>
  </tr>
  <tr>
    <th>Amount</th>
    <td><%= f.text_field(:amount) %></td>
  </tr>
  <tr>
    <th>Remitter</th>
    <td><%= f.text_field(:remitter) %></td>
  </tr>
  <tr>
    <th>Remitter's Account</th>
    <td><%= f.text_field(:remitter_account)%></td>
  </tr>
  <tr>
    <th>Recipient</th>
    <td><%= f.text_field(:recipient) %></td>
  </tr>
  <tr>
    <th>Recipient's Account</th>
    <td><%= f.text_field(:recipient_account)%></td>
  </tr>
  <tr>
    <th>Reference</th>
    <td><%= f.text_field(:reference) %></td>
  </tr>
</table>
<div><%= f.submit("update") %></div>
<%end%>
