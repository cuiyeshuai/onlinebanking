<%= link_to("Back to list", admin_transactions_path, :class => 'back-link') %>
<% provide(:title, "Delete transaction") %>
<h1>Are your sure to delete this transaction below from database?</h1>
<%= form_for @transaction, :url=>admin_transaction_path,:method => "delete" do |f|%>
  <div class="form-group">
    <%= f.label :Currency%> 
    <%= f.text_field :currency, :readonly => true%>
  </div>
  <div class="form-group">
    <%= f.label :Amount%>
    <%= f.text_field :amount, :readonly => true%>
  </div>
  <div class="form-group">
    <%= f.label :Remitter%>
    <%= f.text_field :remitter, :readonly => true%>
  </div>
  <div class="form-group">
    <%= f.label :Remitter account%>
    <%= f.text_field :remitter_account, :readonly => true%>
  </div>
  <div class="form-group">
    <%= f.label :Recipient%>
    <%= f.text_field :recipient, :readonly => true%>
  </div>
  <div class="form-group">
    <%= f.label :Recipient account%>
    <%= f.text_field :recipient_account, :readonly => true%>
  </div>
  <div class="form-group">
    <%= f.label :Reference%>
    <%= f.text_field :reference, :readonly => true%>
  </div>

<div>
  <%= f.submit "Delete transaction", class: "btn btn-outline-success"  %>
</div>
<%end%>
