<% provide(:title, "New transaction")%>
    <h1>New transaction</h1>
    <p>Current account balance: </p>
<!-- For test --> 
<h1><%= @bank %></h1>
<%= link_to  "Go back", transactions_path %>
<!-- end--> 
    <%= form_with scope: :transaction, url: transactions_path, local: true do |t|%>

    <%= t.label :currency %>
    <%= t.select :currency, [['$','USD'],['£','GBP'],['€','EUR']]%>
    <br/>
    <%= t.label :amount %>
    <%= t.text_field :amount %>
    <br/>
    <%= t.label :recipient_name %>
    <%= t.text_field :recipient_name %>
    <br/>
    <%= t.label :recipient %>
    <%= t.text_field :recipient %>
    <br/>
    <%= t.label :reference %>
    <%= t.text_field :reference %>
    <br/>
    <%= t.submit "Make transaction"%>
    <%end%>
